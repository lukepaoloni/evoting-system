{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@user/*": ["./src/user/*"],
      "@shared/*": ["./src/shared/*"],
      "@auth/*": ["./src/auth/*"]
    }
  },
  "exclude": ["node_modules"]
}
